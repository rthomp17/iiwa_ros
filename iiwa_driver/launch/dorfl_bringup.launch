<launch>
  <!-- Select the robot -->
  <arg name="robot_name" default="dorfl"/>
  <arg name="model" default="7" />

  <!-- Select the controller -->
  <arg name="controller" default="TorqueController"/>

  <!-- Setup iiwa -->
  <include file="$(find iiwa_driver)/launch/dorfl_setup.launch">
      <arg name="robot_name" value="$(arg robot_name)"/>
      <arg name="model" value="$(arg model)"/>
      <arg name="controller" value="$(arg controller)"/>
  </include>

  <!-- Spawn iiwa FRI driver -->
  <node pkg="iiwa_driver" type="iiwa_driver" name="iiwa_driver" respawn="false" output="screen">
    <remap from="/joint_states" to="/dorfl/joint_states"/>
    <remap from="/controller_manager" to="/dorfl/controller_manager"/>
    <remap from="/commanding_status" to="/dorfl/commanding_status"/>
    <!-- Load configurations from YAML file to parameter server -->
    <rosparam file="$(find iiwa_driver)/config/dorfl.yaml" command="load"/>
  </node>

  <!-- Spawn controller -->
  <include file="$(find iiwa_control)/launch/dorfl_control.launch">
    <arg name="controller" value="$(arg controller)"/>
  </include>

</launch>